<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.gui.MainController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label fx:id="welcomeMessage">Welcome to F8 demo: standard deviation function</Label>
  <Label fx:id="instruction">Please enter number in integer or double, split by space, tab or enter in the text area bellow:</Label>
  <TextArea fx:id="inputText" prefHeight="300" wrapText="true" promptText="e.g., 1 2 3 4 5,6  7"/>
  <Button fx:id="calculateButton" text="=" onAction="#onCalculateButtonClick" prefWidth="100" prefHeight="100" style="-fx-font-size: 30px;"/>
  <Label fx:id="OutputInstructionText" text="Output:" visible="false"/>
  <TextArea fx:id="outputText" prefHeight="50" editable="false" visible="false"/>
</VBox>
