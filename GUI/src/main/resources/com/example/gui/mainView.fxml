<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextArea?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.gui.MainController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Text>Welcome to F8 demo: standard deviation function</Text>
  <Text>Please enter number in integer or double, split by space or tab in the text area bellow:</Text>
  <TextArea fx:id="inputText"/>
  <Button text="Calculate" onAction="#onCalculateButtonClick"/>
  <Label fx:id="OutputInstructionText" text="Output:"/>
  <TextArea fx:id="outputText" editable="false"/>
</VBox>
